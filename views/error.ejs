<%- include('./header.ejs') %>

<div class="card">

  <% if (typeof errorCode !== 'undefined') { %>
    <% if (errorCode >= 200 && errorCode <= 299) { %>
      <h1>Server Response: <%= errorCode %></h1>
    <% } else { %>
      <h1>ERROR: <%= errorCode %></h1>
    <% } %>

    <hr>
    <br>
    <img class="center" src="https://http.cat/<%= errorCode %>"></img>
    <br><br>
    <p>图片源自: <a href="https://http.cat">http.cat</a></p>
  <% } else { %>
    <h1>出错啦！</h1>
    <hr>
  <% } %>

</div>


<%- include('../header.ejs') %>

<% if (typeof obj_list !== 'undefined') { %>
<div class="card">
  <h1>预览问卷</h1>

  <%- include('../render_question.ejs') %>

</div>
<% } %>

<div class="card">

  <h1>新建调查问卷</h1>

  <form action="/admin/add_1" method="post">
    题目：
    <input type="text" name="c_title" required><br>

    <p>题目类型：</p>
    <input type="radio" id="text" name="c_type" value="input" checked="1">
    <label for="text">填空题</label><br>

    <input type="radio" id="select" name="c_type" value="select">
    <label for="select">单选题</label><br>

    <input type="radio" id="mselect" name="c_type" value="multiselect">
    <label for="mselect">多选题</label><br>

    <fieldset>
        <p>(如果是多选) 选项的数量:</p>
        <input type="number" name="q_num" value="3" max="5" min="2">
    </fieldset>

    <input type="submit" value="添加题目">
  </form>
  <form action="/admin/add_clear" method="post">
    <input style="background-color: #9dbabb;" type="submit" value="清空列表">
  </form>
</div>

<%- include('../footer.ejs') %>
